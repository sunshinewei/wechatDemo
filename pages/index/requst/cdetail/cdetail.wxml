<!--pages/index/requst/cdetail/cdetail.wxml-->
<view> 
   <image src='/pages/index/img/111.jpg' class='imge_show'></image>
   <view class="goods-info">
        <view class="goods-title">{{details.name}}</view>
        <view class="goods-share" wx:if="{{goodsDetail.basicInfo.commissionType == 1}}">转发分享该商品，好友下单后可得 {{goodsDetail.basicInfo.commission}} 积分奖励</view>
        <view class="goods-share" wx:if="{{goodsDetail.basicInfo.commissionType == 2}}">转发分享该商品，好友下单后可得 {{goodsDetail.basicInfo.commission}}元 现金奖励</view>
        <view class="goods-price" style="padding-left:35rpx;">¥ {{details.originalPrice}}</view>
        <view class="goods-price" style="color:#999;font-size:24rpx;">购买200次</view>
        <view class="goods-price" style="color:#999;font-size:24rpx;">共收到 360 次好评</view>
   </view>
    <view class="goods-des-info">
        <view class="label-title">商品介绍</view>
        <view class="goods-text">
           <view>{{details.characteristic}}</view>
         </view>
    </view>
</view>

